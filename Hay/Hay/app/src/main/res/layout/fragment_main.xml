<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">
<RelativeLayout
    android:layout_marginTop="50sp"
    android:layout_width="wrap_content"
    android:id="@+id/winfo"
    android:layout_marginLeft="45sp"
    android:layout_height="wrap_content">
    <ImageView

        android:layout_width="70sp"
        android:layout_height="70sp"
        android:id="@+id/weather"
        android:src="@drawable/sun"
        />
    <TextView
        android:layout_marginLeft="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/temprature"
        android:text="30"
        android:textColor="#000000"
        android:layout_toRightOf="@id/weather"
        />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15sp"
    android:layout_toRightOf="@id/weather"
    android:layout_alignBottom="@id/weather"
    android:textSize="20sp"

    android:text="미세먼지는 좋음입니다."
    />

</RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/winfo"
        android:id="@+id/recommendview"
        ></android.support.v7.widget.RecyclerView>

    <ImageView
        android:id="@+id/cafe"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_below="@id/recommendview"
        android:layout_marginTop="35sp"
        android:layout_marginRight="55sp"
        android:layout_toLeftOf="@id/vertical_line"
        android:src="@drawable/cafe" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/cafe"
        android:text="카페"
        android:layout_marginLeft="16sp"
        android:layout_alignLeft="@id/cafe"
        android:id="@+id/textcafe"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:background="#000000"
        android:id="@+id/horizontal_line"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_below="@id/textcafe"
        android:layout_marginTop="10sp"
        />
    <View
        android:layout_width="2sp"
        android:layout_height="240sp"
        android:layout_below="@id/horizontal_line"
        android:layout_marginLeft="9sp"
        android:id="@+id/vertical_line"
        android:layout_marginTop="-120sp"
     android:layout_centerHorizontal="true"
        android:background="#000000" />
<ImageView
    android:layout_width="70sp"
    android:layout_height="70sp"
    android:id="@+id/food"
    android:layout_toRightOf="@id/vertical_line"
    android:src="@drawable/food"
    android:layout_above="@id/foodtext"
    android:layout_marginLeft="60sp"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="식당"
        android:layout_marginLeft="80sp"
        android:id="@+id/foodtext"
        android:layout_above="@id/horizontal_line"
        android:layout_toRightOf="@id/vertical_line"
        />
<ImageView
    android:layout_width="70sp"
    android:layout_height="70sp"
    android:src="@drawable/ticket"
    android:layout_below="@id/horizontal_line"
    android:layout_toLeftOf="@id/vertical_line"
    android:layout_marginRight="55sp"
    android:layout_marginTop="20sp"
    android:id="@+id/activity"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:text="액티비티"
    android:layout_below="@id/activity"
  android:layout_toLeftOf="@id/vertical_line"
    android:layout_marginRight="60sp"

    android:layout_marginTop="8sp"
    />
    <ImageView
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:src="@drawable/park"
        android:layout_toRightOf="@id/vertical_line"
        android:layout_below="@id/horizontal_line"
        android:layout_marginLeft="60sp"
        android:layout_marginTop="20sp"
    android:id="@+id/culture"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="공연˙전시"
        android:id="@+id/textculture"
        android:layout_below="@id/culture"
        android:layout_alignLeft="@id/vertical_line"
        android:layout_marginTop="8sp"
        android:layout_marginLeft="60sp"
        />

</RelativeLayout>