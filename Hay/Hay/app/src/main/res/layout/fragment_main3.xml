<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment">
    <RelativeLayout
        android:layout_marginTop="50sp"
        android:layout_width="wrap_content"
        android:id="@+id/winfo"
        android:layout_marginLeft="45sp"
        android:layout_height="wrap_content">
        <ImageView

            android:layout_width="70sp"
            android:layout_height="70sp"
            android:id="@+id/weather"
            android:src="@drawable/sun"
            />
        <TextView
            android:layout_marginLeft="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/temprature"
            android:text="30"
            android:textColor="#000000"
            android:layout_toRightOf="@id/weather"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15sp"
            android:layout_toRightOf="@id/weather"
            android:layout_alignBottom="@id/weather"
            android:textSize="20sp"

            android:text="미세먼지는 좋음입니다."
            />

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/winfo"
        android:id="@+id/recommendview"
        ></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="40sp"
        android:orientation="horizontal"
        android:layout_below="@id/recommendview">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="75sp"
                android:layout_height="0sp"
                android:layout_weight="5"
                android:background="@drawable/cafe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"
                android:text="카페"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="75sp"
                android:layout_height="0sp"
                android:layout_weight="5"
                android:background="@drawable/food" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"
                android:text="외식"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="75sp"
                android:layout_height="0sp"
                android:layout_weight="5"
                android:background="@drawable/what" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"
                android:text="액티비티"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:textColor="#000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="100sp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="75sp"
                android:layout_height="0sp"
                android:layout_weight="5"
                android:background="@drawable/ticket" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="2"
                android:text="공연·전시"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:textColor="#000"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>